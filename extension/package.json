{
  "name": "icegenius-extension",
  "displayName": "iCEGenius Simulator and Programmer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:verilog",
    "onLanguage:systemverilog"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "icegenius-extension.sim",
        "category": "iCEGenius",
        "title": "Simulate Verilog",
        "icon": {
          "light": "resources/sim_wave_light_mode.svg",
          "dark": "resources/sim_wave_dark_mode.svg"
        }
      },
      {
        "command": "icegenius-extension.buildAndUpload",
        "category": "iCEGenius",
        "title": "Build and Upload Verilog",
        "icon": {
          "light": "resources/upload_light_mode.svg",
          "dark": "resources/upload_dark_mode.svg"
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "icegenius-extension.sim",
          "when": "editorLangId == verilog"
        },
        {
          "command": "icegenius-extension.buildAndUpload",
          "when": "editorLangId == verilog"
        }
      ],
      "editor/title": [
        {
          "command": "icegenius-extension.sim",
          "when": "editorLangId == verilog",
          "group": "navigation"
        },
        {
          "command": "icegenius-extension.buildAndUpload",
          "when": "editorLangId == verilog",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "iCEGenius",
      "properties": {
        "icegenius-extension.oss-cad-suite-path": {
          "type": "string",
          "default": "",
          "description": "The path to the oss-cad-suite folder can be set here manually. The extension should have already set the path correctly depending on the system. The path should not contain spaces."
        },
        "icegenius-extension.auto-open-gtkwave": {
          "type": "boolean",
          "default": "true",
          "description": "GTKWave will be opened automatically post-simulation. If not wanted, set to false."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "node-downloader-helper": "^2.1.9",
    "node-fetch": "^3.3.2"
  }
}